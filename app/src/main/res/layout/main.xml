<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
<Switch
    android:id="@+id/onoffswitch"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:checked="false"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Turn affirmations on/off"
    android:textOn="ON"
    android:textOff="OFF"
    />

<TextView
    android:id="@+id/seekbartitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="14dp"
    android:layout_below="@+id/onoffswitch"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Average time between affirmations:" />

<SeekBar
    android:id="@+id/seekbar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:max="132"
    android:progress="60"
    android:layout_below="@+id/seekbartitle"
    />

<TextView
    android:id="@+id/seekbarvalue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="29dp"
    android:layout_below="@+id/seekbar"
    android:layout_marginTop="14dp" />

<TextView
    android:id="@+id/scheduled"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="26dp"
    android:layout_below="@+id/seekbarvalue" />
    
</RelativeLayout>
